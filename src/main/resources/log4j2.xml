<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="haslam.blackstone.gui">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%-5p %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
        </Console>
        <TextAreaAppender name="haslam.blackstone.gui">
            <PatternLayout pattern="[%c{1}] - %msg%n"/>
        </TextAreaAppender>
    </Appenders>
    <Loggers>
        <Root level="info" additivity="false">
            <AppenderRef ref="haslam.blackstone.gui"/>
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>